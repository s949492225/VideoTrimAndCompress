<resources>

    <style name="blue_text_18_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#33BBFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="gray_text_18_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Video_Trim_SeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:progressDrawable">@null</item>
        <item name="android:thumb">@drawable/icon_seek_bar</item>
        <item name="android:thumbOffset">1dip</item>
    </style>

    <style name="ucrop_actionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
    </style>

    <style name="app_theme_base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/digger_primary_color</item>
        <item name="colorPrimaryDark">@color/digger_primary_color_dark</item>
        <item name="android:windowBackground">@color/digger_primary_grey_background</item>
    </style>

    <style name="crop_theme_base" parent="app_theme_base">
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
    </style>
</resources>
